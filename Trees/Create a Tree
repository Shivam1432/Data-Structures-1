class Node 
{
  int data;
  Node child1;
  Node child2;
  Node child3;
  public Node()
  {
  data=0;    
  }
  public Node(int d)
  {
      data=d;
  }
}
public class Main
{
	public static void main(String[] args) {
	Node root=new Node(0);
	root.child1=new Node(1);
	root.child2=new Node(2);
	root.child3=new Node(3);
	
	System.out.println("root "+root.data);
	System.out.println("child1 "+root.child1.data);
	System.out.println("child2 "+root.child2.data);
	System.out.println("child3 "+root.child3.data);
	}
}
